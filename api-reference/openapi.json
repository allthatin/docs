{
  "openapi": "3.0.1",
  "info": {
    "title": "ATICO API STORE",
    "description": "ATICO API 입니다",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://api.atico.co.kr:8000"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/member/signup": {
      "post": {
        "description": "회원가입",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewMember"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Member"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      
    "/member/login": {
      "post": {
        "description": "로그인",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "email을 입력하세요",
            "required": true,
            "schema": {
              "type": "text",
              "format": "char"
            }
          },
          {
            "name": "password",
            "in": "query",
            "description": "password를 입력하세요",
            "required": true,
            "schema": {
              "type": "password",
              "format": "char"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {}
          },
          "400": {
            "description": "로그인 에러",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Member": {
        "required": [
          "email"
        ],
        "type": "object",
        "properties": {
          "email": {
            "description": "email",
            "type": "string"
          },
          "password": {
            "description": "password",
            "type": "password"
          }        
        }
      },
      "NewMember": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "description": "email",
            "type": "string"
          },
          "password": {
            "description": "password",
            "type": "password"
          }
        }
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
}
